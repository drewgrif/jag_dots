# example sxhkdrc for use with dk
#########################################################

# launcher
super + p
	dmenu_run
	
# rofi launchers
# rofi -modi drun -show drun -line padding 4 -hide-scrollbar -show-icons
super + space
   	rofi -modi drun -show drun -line padding 4 -hide-scrollbar -show-icons
   	
super + h
	tilix -e ~/.config/dk/keyhelper.sh
	
super + b
	firefox-esr

super + shift + b
	firefox-esr -private-window

super + e
	geany

super + f
	thunar

# terminal
super + Return
	tilix


#########
# Scrot #
#########
super + @Print
	scrot -s -e 'mv $f ~/Screenshots'; \
	notify-send 'Scrot' 'Selected image to ~/Screenshots'

@Print
	scrot -e 'mv $f ~/Screenshots'; \
	notify-send 'Scrot' 'Image saved to ~/Screenshots'
	
## redshift
super + alt + r
	~/scripts/redshift-on
	
super + alt + b
	~/scripts/redshift-off
	
	
# dedicated volume keys
{XF86AudioRaiseVolume,XF86AudioLowerVolume}
	pamixer {-i,-d} 2

# dedicated backlight keys
{XF86MonBrightnessUp,XF86MonBrightnessDown}
	xbacklight {+10,-10}
	
## audio

# Change volume, chunky
super + Insert
    ~/scripts/changevolume up
    
super + Delete
	~/scripts/changevolume down
	
super + m
	~/scripts/changevolume mute

# reload sxhkd
super + Escape
	pkill -USR1 -x sxhkd;notify-send 'sxhkd' 'Reloaded config'

# quit dk
super + shift + q
	dkcmd exit

# reload dkrc
super + shift + r
	$HOME/.config/dk/dkrc; notify-send 'dk' 'Reloaded config'


# focus next or previous window
super + {Right,Left}
	dkcmd win focus {next,prev}

# close window, swap tiled window in/out of master, cycle tiled windows in place
super + {q,Tab}
	dkcmd win {kill,cycle}


# toggle floating or sticky
super + shift + {space,s}
	dkcmd win {float,stick}

# resize window, signed (+/-) for relative changes
super + ctrl + {Left,Up,Down,Right}
	dkcmd win resize {w=-20,h=+20,h=-20,w=+20}

# move the active window up/down the stack
super + shift + {Right,Left}
	dkcmd win mvstack {up,down}

# view, send, or follow to a workspace (by number)
super + {_,shift + ,ctrl + }{1-9,0}
	dkcmd ws {view,send,follow} {1-9,10}
	
# view, send, or follow to the next, previous, or last active monitor
# super + {_,shift + ,ctrl + }{comma,period,backslash}
# 	dkcmd mon {view,send,follow} {prev,next,last}

# change number of windows in master or first stack
super + {_,shift + }{i,d}
	dkcmd set {master,stack} {+1,-1}

# change gap width
super + {equal,minus}
	dkcmd set gap {+5,-5}

# change border widths
super + ctrl + {_,shift + }{equal,minus}
	dkcmd set border {width,outer_width} {+1,-1}
