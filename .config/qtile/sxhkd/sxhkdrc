#####################
# Application keybindings #
#####################

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd; notify-send 'sxhkd' 'Reloaded config'

super + b
	 firefox-esr

super + shift + b
	firefox-esr -private-window

super + Return
	tilix

# rofi launchers
super + space
   	rofi -show drun -modi drun -line-padding 4 -hide-scrollbar -show-icons 
   	
super + shift + Return
    kitty
	
# help with shortcuts
super + h
	tilix -e ~/.config/qtile/keyhelper.sh

# application launchers

super + f
	thunar

super + e 	
	geany

super + g
	gimp

super + v
   tilix -e pulsemixer

	
super + d
	Discord

super + o
	obs

# Change volume, chunky
super + Insert
    ~/scripts/changevolume up
    
super + Delete
	~/scripts/changevolume down
	
super + m
	~/scripts/changevolume mute
	
# dedicated volume keys
{XF86AudioRaiseVolume,XF86AudioLowerVolume}
	pamixer {-i,-d} 2

# dedicated backlight keys
{XF86MonBrightnessUp,XF86MonBrightnessDown}
	xbacklight {+10,-10}


#########
# Scrot #
#########
super + @Print
	scrot -s -e 'mv $f ~/Screenshots'; \
	notify-send 'Scrot' 'Selected image to ~/Screenshots'

@Print
	scrot -e 'mv $f ~/Screenshots'; \
	notify-send 'Scrot' 'Image saved to ~/Screenshots'
	
## redshift
super + alt + r
	~/scripts/redshift-on
	
super + alt + b
	~/scripts/redshift-off

    

 
