super + b
    firefox-esr

super + Return
	tilix

# rofi launchers
super + space
   	rofi -modi drun -show drun -line padding 4 -hide-scrollbar -show-icons
   	
super + shift + Return
    terminator
	
# rofi network manager (will not work unless on wifi)	
super + n
	bash ~/bin/rofi-network-manager

# logout, shutdown, reboot
super + x
	~/bin/power
	
# help with shortcuts
super + h
	~/bin/rofi-key

# application launchers

super + f
	wmctrl -a Thunar || thunar

super + e 	
	wmctrl -a Geany || geany

super + l
	/opt/LiteXL-v2.1.1-addons-x86_64.AppImage

super + g
	gimp
	
super + c
	google-chrome
	
super + d
	Discord

super + o
	obs

super + t
	~/bin/time_date
	
super + shift + c
	galculator


# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd; notify-send 'sxhkd' 'Reloaded config'
	
super + shift + r
	bspc wm -r; notify-send 'bspwm' 'Restarted'

## windows keybindings
super + shift + q
	bspc quit

super + q
	bspc node -c

super + i
    bspc node -R 90
super + shift + i
    bspc node -R -90

super + {shift + t,shift + f}
	bspc node -t {tiled,fullscreen}

super + { Left, Down, Up, Right}
	bspc node -f {west,south,north,east}
	
super + shift + { Left, Down, Up, Right}
	bspc node -s {west,south,north,east}

## Change workspace with dunst feedback
super + {_,shift + }{1-9,0}
	bspc {desktop --focus,node --to-desktop} 'focused:^{1-9,10}' --follow; \
	~/bin/whichwspace

## Resizing windows
super + ctrl + { Left, Down, Up, Right}
	bspc node -z {left -80 0,bottom 0 80,top 0 -80,right 80 0}

super + ctrl + shift + { Left, Down, Up, Right}
	bspc node -z {right -80 0,top 0 80,bottom 0 -80,left 80 0}
	
## audio

# Change volume, chunky
super + shift + k
    ~/bin/changevolume up
    
super + shift + j
	~/bin/changevolume down
	
super + shift + m
	~/bin/changevolume mute

#########
# Scrot #
#########
super + @Print
	scrot -s -e 'mv $f ~/Screenshots'; \
	notify-send 'Scrot' 'Selected image to ~/Screenshots'

@Print
	scrot -e 'mv $f ~/Screenshots'; \
	notify-send 'Scrot' 'Image saved to ~/Screenshots'
	
## redshift
super + alt + r
	~/bin/redshift-on
	
super + alt + b
	~/bin/redshift-off


## Show clipmenu
alt + v
    CM_LAUNCHER=rofi clipmenu 

## Show clipmenu
super+ alt + v
    xfce4-terminal -e ~/bin/ovpn
    
super + @equal
	bspc query -N -d | xargs -I % bspc node % -B
 
