#####################
# Application keybindings #
#####################

super + b
    firefox-esr
    
super + shift + b
	firefox-esr -private-window

# rofi launchers
super + space
   	rofi -modi drun -show drun -line padding 4 -hide-scrollbar -show-icons
   	
super + shift + Return
	terminator

# logout, shutdown, reboot
super + x
	~/bin/power
	
# help with shortcuts
super + h
	tilix -e ~/.config/suckless/sxhkd/keyhelper.sh
	
# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd; notify-send 'sxhkd' 'Reloaded config'
# application launchers

super + f
	thunar

super + e 	
	geany

super + g
	gimp

super + n
	flatpak run org.gnome.World.Iotas
	
# super + c
# 	google-chrome
	
super + d
	Discord

super + o
	obs

super + t
	~/bin/time_date
	

## audio

# Change volume, chunky
super + shift + period
    ~/bin/changevolume up
    
super + shift + comma
	~/bin/changevolume down
	
super + shift + m
	~/bin/changevolume mute
	
#########
# Scrot #
#########
super + @Print
	flameshot gui

@Print
	scrot -e 'mv $f ~/Screenshots'; \
	notify-send 'Scrot' 'Image saved to ~/Screenshots'
	
## redshift
super + alt + r
	~/bin/redshift-on
	
super + alt + b
	~/bin/redshift-off


## Show clipmenu
alt + v
    CM_LAUNCHER=rofi clipmenu 
