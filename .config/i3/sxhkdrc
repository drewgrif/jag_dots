super + b
	 firefox-esr

super + shift + b
	firefox-esr -private-window

super + Return
	tilix

# rofi launchers

super + Escape
	pkill -USR1 -x sxhkd; notify-send 'sxhkd' 'Reloaded config'
	
super + space
   	rofi -show drun -modi drun -line-padding 4 -hide-scrollbar -show-icons
   	
super + shift + Return
    kitty
	
# help with shortcuts
super + h
	tilix -e ~/.config/i3/keyhelper.sh

# application launchers

super + f
	thunar

super + e 	
	geany

super + g
	gimp

super + v
   tilix -e pulsemixer

	
super + d
	Discord

super + o
	obs
 
 
